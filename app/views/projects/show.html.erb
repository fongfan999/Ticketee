<% title(@project.name, "Projects") %>

<header>
  <h1><%= @project.name %></h1>
  
  <ul class="actions">
    <li><%= link_to "Edit Project", [:edit, @project], class: "edit" %></li>
    <li><%= link_to "Delete Project", @project, method: :delete,
      data: { confirm: "Are you sure want to delete this project?" },
      class: "delete" %></li>
  </ul>  
</header>

<p><%= @project.description %></p>